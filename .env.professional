# Neo-rs Environment Configuration
# Copy this file to .env and customize for your environment

# Network Configuration
# Options: mainnet, testnet, local
NEO_NETWORK=testnet

# Data Storage
NEO_DATA_DIR=./data/testnet
NEO_STORAGE_BACKEND=rocksdb

# Network Ports
NEO_RPC_PORT=20332
NEO_P2P_PORT=20333
NEO_METRICS_PORT=9090

# RPC Configuration
NEO_RPC_URL=http://127.0.0.1:20332
NEO_RPC_BIND=127.0.0.1
NEO_RPC_CORS=true
NEO_RPC_AUTH=false

# Logging
NEO_LOG_LEVEL=info
NEO_LOG_FORMAT=pretty
NEO_LOG_FILE=./logs/neo-node.log

# Features
NEO_METRICS=false
NEO_CONSENSUS=false
NEO_RPC_ENABLED=true

# Performance Tuning
NEO_MAX_CONNECTIONS=50
NEO_MIN_CONNECTIONS=5
NEO_MAX_TRANSACTIONS=25000

# Development Options
NEO_DEBUG=false
NEO_COMPRESSION=true

# Docker Configuration
DOCKER_IMAGE=neo-node:latest
DOCKER_NETWORK=neo-network

# Production Settings (for mainnet)
# NEO_NETWORK=mainnet
# NEO_DATA_DIR=/opt/neo/data/mainnet
# NEO_RPC_PORT=10332
# NEO_P2P_PORT=10333
# NEO_LOG_LEVEL=warn
# NEO_METRICS=true
# NEO_RPC_AUTH=true
# NEO_RPC_CORS=false
